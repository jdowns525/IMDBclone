<h1>
  Movie # <%= @the_movie.id %> details
</h1>

<a href="/movies" class="btn btn-block btn-outline-secondary">
  Go back
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>


  <dt>
    Image
  </dt>

  <dd>
    <%= @the_movie.image %>
  </dd>


  <dd>
    <% movie_director = Director.where({ :id => @the_movie.director_id }).at(0) %>
  </dd>

  <dt>
    Director
  </dt>
    <%= movie_director.name %>
  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(movie_director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(movie_director.updated_at) %> ago
  </dd>
</dl>
